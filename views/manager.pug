extend layout
//
  Manager view to approve and decline user account requests requests.
block content
  script(src='/javascripts/manager.js')
  link(rel='stylesheet', href='/stylesheets/manager.css')
  //
    Green title bar.
  #header
    h1(id='title')= title
  //
    Main content block. Displays a table of all user requests.
  #table
    table(id='request-table')
      tr(id='request-header')
        th Name
        th Email address
        th Organization
        th Date issued
        th Votes
        th Approval
    
    