extends layout

block content
  link(rel='stylesheet', href='/stylesheets/loading.css')
  link(rel='stylesheet', href='/stylesheets/info-box.css')
  link(rel='stylesheet', href='/stylesheets/loader.css')
  link(rel='stylesheet', href='/stylesheets/login.css')
  script(src='/javascripts/login.js')
  
  #header
    h1(id='title')= title
    h1(id='open-register' class='hidden') Register
  
  #content-header(class='hidden')
    h1( id='login') Login:

  #register-box(class='info-box' class='hidden')
    p Full Name: 
    input(type='text' class='reg-info' id='name' placeholder='First Last')
    p Email address: 
    input(type='text' class='reg-info' id='email' placeholder='Email')
    p Organization: 
    input(type='text' class='reg-info' id='organization' placeholder='Organization')
    button(class='button' id='register-user') Submit 


  form#content-block(action='topics' method='GET' class='hidden')
    input(type='text' name='username' placeholder='Username' id='username')
    input(type='text' name='password' placeholder='Password' id='password')
    p
    input(type='submit' class='button' id='submit' value='Submit')
    p(id='error-msg')

  #loading-screen
    p(class='loading-msg') Blockchains are linking.
    #loader
    p(class='loading-msg') Please wait...


  
