extends layout

block content

  script(src='/javascripts/info-box.js')
  link(rel='stylesheet', href='/stylesheets/topic-select.css')

  #header
    h1(id='title')= title
    h1(class='welcome' ) Welcome #{username.username}
    i(class="material-icons md-48" id='user-button') account_circle

  #content-header
    h1 Current Voting Topics

  #topic-creation(class='info-box' class='hidden')
    h1 Create a Vote Topic
    form(action='create-topic' method='get')
      p Vote Description:
      input(type='text' class='new-topic-input' id='topic-name' name='desc' placeholder='Topic Description')
      p First Candidate:
      input(type='text' class='new-topic-input' id='topic-cand1' name='cand1' placeholder='Candidate')
      p Second Candidate:
      input(type='text' class='new-topic-input' id='topic-cand2' name='cand2' placeholder='Candidate')
      input(type='submit' class='button' id='topic-submit' value='Submit' )

  #user-info(class='info-box' class='hidden')
    #div
      p You are logged in as:
      p(class='info')=username.username
    #div
      p Available votes per topic: 
      p(class='info')=votes
    form(action='/logout' method='get')
      input(type='submit' class='button' id='logout' value='Logout')
      
  #content-block 
    #topics
      form(action='/topic/t1' method='post')
        input(type='text' name='topicid' value='t1' class='hidden')
        input(type='submit' name='topicid' class='button' class='topic' value='Who should be the next CEO?')
      form(action='/topic/t2' method='post')
        input(type='text' value='t2' name='topicid' class='hidden')
        input(type='submit' name='topicid' class='button' class='topic' value='Should we fire Robert after the fire hydrant incident?')
    #add
      i(class="material-icons md-48" id='new-topic') playlist_add


